# This is Git's per-user configuration file.
[user]
  # Please adapt and uncomment the following lines:
  name = Daniel Pendolino
  email = {{ .email }}
  signingkey = {{ .gitsignkey }}
[core]
  editor = nvim
[merge]
  tool = nvimdiff
  conflictstyle = diff3
[diff]
  tool = nvimdiff
  conflictstyle = diff3
[difftool "nvimdiff"]
  cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
  prompt = true
[color]
  ui = auto
[submodule]
  recurse = true
[commit]
  sig = 65BD25EB
  gpgsign = true
[alias]
  root = !pwd
[pull]
  rebase = false
[github]
  user = {{ .chezmoi.group }}
[url "git@github.com:"]
  pushInsteadOf = https://github.com/
  pushInsteadOf = git://github.com/
[push]
autoSetupRemote = true
